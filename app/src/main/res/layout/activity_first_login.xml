<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sns_login_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_first_login_logo"
        android:src="@drawable/sns_login_logo"
        android:layout_marginTop="144dp"
        android:layout_width="193dp"
        android:layout_height="64dp" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center">


     <LinearLayout
         android:id="@+id/ll_sns_1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginTop="180dp"
         android:orientation="horizontal">

        
        <View
            android:layout_width="99dp"
            android:layout_height="1dp"
            android:background="@color/borderColor"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_sns_simple_login"
            />

         <TextView
             android:id="@+id/text_sns_simple_login"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="간편 로그인"
             android:textSize="11sp"
             android:textColor="#95989A"/>

        <View
            android:layout_width="99dp"
            android:layout_height="1dp"
            android:background="@color/borderColor"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/text_sns_simple_login"
            />

     </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/ll_sns_1"
            android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/kakaoBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/sns_login_kakaotalk"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡"
                android:textColor="#95989A"
                android:layout_marginTop="13dp"
                android:textSize="9sp"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="43dp"
                android:gravity="center_horizontal">
            <Button
                android:id="@+id/emailBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/sns_login_email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:textColor="#95989A"
                    android:layout_marginTop="13dp"
                    android:textSize="9sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginLeft="43dp">

            <Button
                android:id="@+id/facebookBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/sns_login_facebook"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="페이스북"
                    android:textColor="#95989A"
                    android:layout_marginTop="13dp"
                    android:textSize="9sp"/>


            </LinearLayout>
       </LinearLayout>
    </RelativeLayout>

        <TextView
            android:id="@+id/text_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 없이 시작하기"
            android:textSize="10sp"
            android:layout_marginTop="70dp"
            android:textColor="#8EE0D6"/>




</LinearLayout>