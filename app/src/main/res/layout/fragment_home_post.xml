<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sopt.freety.freety.util.custom.ScrollFeedbackRecyclerView
            android:id="@+id/home_post_recycler_view"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/my_page_post_offset"
            android:background="#f8f9f9"
            android:overScrollMode="never">
        </com.sopt.freety.freety.util.custom.ScrollFeedbackRecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabtn_home_to_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/floating_btn_offset"
            app:borderWidth="0dp"
            android:backgroundTint="#FFFFFF"
            android:src="@drawable/mypage_floating_arrow"
            android:layout_gravity="bottom|right" />

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>

