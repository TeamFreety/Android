<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    android:fadeScrollbars="true"
    tools:content="com.sopt.freety.freety.view.recruit.RecruitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:id="@+id/my_page_toolbar">

            <ImageButton
                android:id="@+id/recruit_back_btn"
                android:background="@null"
                android:src="@drawable/back_button"
                android:layout_width="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구인글"
                android:textColor="#111111"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recruit_top_layout"
            android:layout_width="match_parent"
            android:layout_height="410dp">

        <android.support.v4.view.ViewPager
                android:id="@+id/recruit_image_view_pager"
                android:layout_width="match_parent"
                android:layout_height="360dp">

            </android.support.v4.view.ViewPager>

            <RelativeLayout
                android:id="@+id/recruit_top_sub_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/recruit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:text="염색 해드립니다."
                    android:textColor="#000000"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/recruit_name"
                    android:layout_below="@+id/recruit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="110dp"
                    android:text="디자인 박"
                    android:textColor="#95989A"
                    android:textSize="11sp"/>

                <Button
                    android:id="@+id/recruit_pick_btn"
                    android:background="@drawable/recruit_line_single"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:paddingLeft="25dp"
                    android:textSize="12sp"
                    android:layout_marginRight="11dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/recruit_letter_btn"
                    android:layout_toStartOf="@+id/recruit_letter_btn" />

                <ImageView
                    android:id="@+id/recruit_pick_heart"
                    android:src="@drawable/recruit_heart_empty_single"
                    android:layout_marginRight="115dp"
                    android:layout_width="19dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="17dp" />

                <Button
                    android:id="@+id/recruit_letter_btn"
                    android:background="@drawable/recruit_letter_btn"
                    android:text="쪽지"
                    android:paddingLeft="21dp"
                    android:textSize="12sp"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/circle_background"/>

            <ImageView
                android:id="@+id/recruit_profile"
                android:scaleType="centerCrop"
                android:layout_marginLeft="21dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#EFEFEF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    android:text="헤어정보"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#EFEFEF"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:orientation="vertical"
                android:background="#ffffff">

                <LinearLayout
                    android:id="@+id/recruit_hair_info_layout1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/recruit_scissor"/>

                    <TextView
                        android:text="시술 유형"
                        android:layout_marginLeft="7dp"
                        android:textSize="11sp"
                        android:textColor="@color/recruitTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/recruit_hair_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/recruitTextColor"
                        android:text="탈색"
                        android:textSize="13sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recruit_hair_info_layout2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/recruit_hair_info_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/recruit_price"/>

                    <TextView
                        android:text="시술 가격"
                        android:layout_marginLeft="7dp"
                        android:textSize="11sp"
                        android:textColor="@color/recruitTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/recruit_hair_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/recruitTextColor"
                        android:text="89,900"
                        android:textSize="13sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/recruit_hair_info_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/recruit_date"/>

                    <TextView
                        android:text="시술 날짜"
                        android:layout_marginLeft="7dp"
                        android:textSize="11sp"
                        android:textColor="@color/recruitTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/recruit_hair_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/recruitTextColor"
                        android:text="2017년 7월 8일 오후 3시"
                        android:textSize="13sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#CECED2"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="86dp"
                    android:background="#ECECEC"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="90dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="116dp"
                android:orientation="vertical"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="15dp"
                        android:src="@drawable/recruit_list"/>

                    <TextView
                        android:text="상세 정보"
                        android:layout_marginLeft="7dp"
                        android:textSize="11sp"
                        android:textColor="@color/recruitTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/recruit_info"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:text="모발복구 펌 + 헤드스파커트\n쉽게 말하면 단백질 클리닉시술이 포함된 복구매직입니다.\n모발복구 펌 + 헤드스파커트 쉽게 말하면 단백질 클리닉시술이 포함된 복구매직입니다."
                    android:textSize="10sp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="37dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#A6A6A6"/>
            </RelativeLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="#EFEFEF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:orientation="vertical"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:paddingTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="14dp"
                    android:src="@drawable/recruit_marker"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="위치 정보"
                    android:textSize="11sp"/>
            </LinearLayout>

            <fragment
                android:id="@+id/recruit_map"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                class="com.google.android.gms.maps.MapFragment"/>

            <TextView
                android:id="@+id/recruit_address"
                android:paddingLeft="16dp"
                android:text="서울 동작구 상도로 354"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:textColor="#676767"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/recruit_belong_name"
                android:text="병진채은헤어"
                android:paddingLeft="16dp"
                android:textColor="#676767"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
