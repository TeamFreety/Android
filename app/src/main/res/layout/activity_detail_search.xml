<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sopt.freety.freety.view.search.DetailSearchActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"

      >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:textColor="#111111"
          android:textSize="18sp"
          android:text="상세검색"
          />

      <Button
          android:id="@+id/btn_detail_cancel"
          android:layout_width="50dp"
          android:layout_height="match_parent"
          android:layout_alignParentEnd="true"
          android:background="@color/cardview_light_background"
          android:text="X"/>

  </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시술유형"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1">
            <CheckBox
                android:id="@+id/checkbtn_sort_perm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="펌"/>
            <CheckBox
                android:id="@+id/checkbtn_sort_dye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/checkbtn_sort_perm"
                android:text="염색"/>
            <CheckBox
                android:id="@+id/checkbtn_sort_cut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbtn_sort_dye"
                android:layout_marginLeft="10dp"
                android:text="커트"/>
            <CheckBox
                android:id="@+id/checkbtn_sort_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbtn_sort_cut"
                android:layout_marginLeft="10dp"
                android:text="기타"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
