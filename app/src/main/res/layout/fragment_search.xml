<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="45dp">

        <ImageButton
            android:background="@null"
            android:id="@+id/search_back_btn"
            android:src="@drawable/back_button"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="찾기"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/drop_shadow"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/search_filter_btn1"
                android:src="@drawable/controls"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="25dp"/>

            <Button
                android:id="@+id/search_filter_btn2"
                android:layout_width="42dp"
                android:layout_height="18dp"
                android:background="@null"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/search_filter_btn1"
                android:text="필터"
                android:textColor="#95989A"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_search_latest"
                android:layout_width="58dp"
                android:layout_height="29dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:text="최신순"
                android:textColor="#ffffff"
                android:background="@drawable/search_latest_btn"
                android:layout_toLeftOf="@+id/btn_search_nearest"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/btn_search_nearest"
                android:layout_width="58dp"
                android:layout_height="29dp"
                android:layout_marginBottom="5dp"
                android:text="거리순"
                android:textColor="#95989a"
                android:background="@drawable/search_nearest_btn"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"/>

        </RelativeLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:clipToPadding="false"
                android:padding="@dimen/my_page_post_offset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabtn_search_to_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="@dimen/floating_btn_offset"
                android:src="@android:drawable/ic_dialog_email"
                app:layout_anchor="@+id/rv_search"
                app:layout_anchorGravity="bottom|right" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

</LinearLayout>