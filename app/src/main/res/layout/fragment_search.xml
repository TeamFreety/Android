<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_rl1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_search_search"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="찾기"
            android:textColor="#111111"
            android:textSize="18sp"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rl2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_search_detail"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/img_search_detail"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_search_detail"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="상세검색"
            android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/search_rl3"

            >
            <Button
                android:id="@+id/btn_search_recent"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="최신순"
                android:textSize="10sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/search_rl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/btn_search_distance"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="거리순"
                android:textSize="10sp"/>
        </RelativeLayout>

    </RelativeLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clipToPadding="false"
        android:padding="@dimen/my_page_post_offset"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

    </android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabtn_search_to_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/floating_btn_offset"
            android:src="@android:drawable/ic_dialog_email" />



    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>