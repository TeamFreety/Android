<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_list_elem_card"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingLeft="18dp"
    android:layout_height="80dp">

    <View
        android:layout_width="277dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#EFEFEF"/>

    <ImageView
        android:id="@+id/chat_list_elem_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/chat_list_elem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/chat_list_elem_image"
        android:text="hihihi" />

    <TextView
        android:id="@+id/chat_list_elem_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_list_elem_name"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="#DDDDDD"
        android:layout_alignLeft="@+id/chat_list_elem_name"
        android:layout_alignStart="@+id/chat_list_elem_name"
        android:text="hey I'm too overwhelemed!! shit!!" />

    <TextView
        android:id="@+id/chat_list_elem_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="10sp"
        android:textColor="#95989A"
        android:layout_alignTop="@+id/chat_list_elem_image"
        android:layout_marginRight="20dp"
        android:text="4:23" />

    <TextView
        android:id="@+id/letter_list_elem_pending"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/letter_pending_image"/>

</RelativeLayout>
