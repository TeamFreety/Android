<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="center">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="96dp"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:id="@+id/my_page_review_header_total"
        android:text="4.2"
        android:textSize="37sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/my_page_review_header_total">

        <ImageView
            android:id="@+id/my_page_review_header_score1"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score2"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score3"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score4"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score5"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="1sp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="31dp"
        android:background="#D9D9D9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 후기"
            android:textSize="11sp"
            android:textColor="#95989A"/>

        <TextView
            android:id="@+id/my_page_review_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textSize="27sp"
            android:textColor="#95989A"/>

    </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:background="#EFEFEF">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="후기글 목록"
            android:layout_marginLeft="16dp"
            android:textColor="#95989A"/>
    </LinearLayout>


</LinearLayout>
