<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/my_page_review_header_total"
        android:text="4.2"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_page_review_header_score1"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score2"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score3"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score4"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_header_score5"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="#bbbbbb"/>
</LinearLayout>
