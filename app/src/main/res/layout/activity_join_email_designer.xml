<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/pwdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패스워드"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/emailTextView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="이름"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/pwdTextView" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/belongTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소속"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView" />

    <TextView
        android:id="@+id/belongNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소속명"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTextView"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/belongTextView" />

    <TextView
        android:id="@+id/careerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경력"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailTextView"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/belongNameTextView" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="취소"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="422dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        tools:layout_editor_absoluteY="422dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33888888" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text|textCapCharacters"
        app:layout_constraintBottom_toBottomOf="@+id/emailTextView"
        app:layout_constraintTop_toTopOf="@+id/emailTextView"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintVertical_bias="0.533" />

    <EditText
        android:id="@+id/pwdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text|textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/pwdTextView"
        app:layout_constraintTop_toTopOf="@+id/pwdTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.551"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text|textCapCharacters"
        app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="@+id/nameTextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintVertical_bias="0.482"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText" />

    <EditText
        android:id="@+id/ageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/ageTextView"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText"
        app:layout_constraintTop_toTopOf="@+id/ageTextView" />

    <EditText
        android:id="@+id/belongNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/belongNameTextView"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText"
        app:layout_constraintTop_toTopOf="@+id/belongNameTextView" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="334dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText">

    <RadioGroup
        android:id="@+id/careerRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
        android:id="@+id/radio6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1년 이하"
        android:textSize="8sp"
        app:layout_constraintTop_toTopOf="@+id/careerTextView"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText" />

        <RadioButton
        android:id="@+id/radio7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="1-3년"
        app:layout_constraintLeft_toRightOf="@+id/radio6"
        app:layout_constraintTop_toTopOf="@+id/radio6" />

        <RadioButton
        android:id="@+id/radio8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="3-5년"
        app:layout_constraintLeft_toLeftOf="@+id/radio6"
        app:layout_constraintTop_toBottomOf="@+id/radio6" />

        <RadioButton
        android:id="@+id/radio9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="5년이상"
        app:layout_constraintLeft_toRightOf="@+id/radio8"
        app:layout_constraintTop_toTopOf="@+id/radio8" />

    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/emailEditText"
        app:layout_constraintTop_toTopOf="@+id/belongTextView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout">

        <RadioGroup
            android:id="@+id/belongRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/emailEditText"
            app:layout_constraintTop_toTopOf="@+id/belongTextView">


            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="대학교"
                app:layout_constraintLeft_toRightOf="@+id/radio1"
                app:layout_constraintTop_toTopOf="@+id/radio1" />

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="학원"
                app:layout_constraintLeft_toRightOf="@+id/radio2"
                app:layout_constraintTop_toTopOf="@+id/radio2" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="고등학교"
                android:textSize="8sp"
                app:layout_constraintLeft_toLeftOf="@+id/emailEditText" />

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:text="헤어샵"
                app:layout_constraintLeft_toLeftOf="@+id/radio1"
                app:layout_constraintTop_toBottomOf="@+id/radio1" />

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="기타"
                app:layout_constraintLeft_toRightOf="@+id/radio4"
                app:layout_constraintTop_toTopOf="@+id/radio4" />

        </RadioGroup>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>