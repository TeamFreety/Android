<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sopt.freety.freety.view.login.ModelSNSSignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#f1f1f1"
        android:layout_height="45dp">


        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/back_button"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="회원가입"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/drop_shadow"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#f1f1f1">

        <ImageView
            android:src="@drawable/freety"
            android:layout_marginLeft="124dp"
            android:layout_width="101dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#e3e5e6"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/sign_up_sns_model_name_text"
            android:text="이름"
            android:textSize="13sp"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        
        <EditText
            android:id="@+id/sign_up_sns_model_name_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="26dp"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:inputType="text"
            android:hint="이름을 입력해주세요"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/sign_up_sns_model_name_text" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="#e3e5e6"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/sign_up_sns_model_age_text"
            android:text="나이"
            android:textSize="13sp"
            android:layout_marginLeft="22dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/sign_up_sns_model_age_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="26dp"
            android:background="@android:color/transparent"
            android:textSize="13sp"
            android:inputType="number"
            android:hint="나이를 입력해주세요"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/sign_up_sns_model_age_text" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="365dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#e3e5e6"/>

        <LinearLayout
            android:id="@+id/sign_up_sns_model_auth_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/sign_up_sns_model_auth_checkbox1"
                android:layout_width="110dp"
                android:layout_height="17dp"
                android:textSize="10dp"
                android:buttonTint="#787878"
                android:text="이용약관에 동의"/>

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/sign_up_sns_model_auth_layout"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/sign_up_sns_model_auth_checkbox2"
                android:layout_width="154dp"
                android:layout_height="17dp"
                android:textSize="10dp"
                android:buttonTint="#787878"
                android:text="개인정보 취급 방침에 동의"/>

            <ImageView
                android:src="@drawable/arrow"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#e3e5e6"/>

    <TextView
        android:id="@+id/sign_up_sns_model_finish_btn"
        android:text="회원가입완료"
        android:textColor="#5D5D5D"
        android:background="#b7b7b7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"/>

</LinearLayout>
