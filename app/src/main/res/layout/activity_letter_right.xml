<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="11dp" android:paddingBottom="11dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/letter_right_name"
        android:layout_alignParentRight="true"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:text="정병진"
        android:paddingTop="2dp"
        android:textSize="12sp"
        android:gravity="left"
        android:paddingRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="32dp"
        android:background="#7EEFD3"/>

    <ImageView
        android:src="@drawable/circle_background"
        android:layout_alignParentRight="true"
        android:layout_marginTop="13dp"
        android:layout_width="46dp"
        android:layout_marginRight="16dp"
        android:layout_height="46dp" />

    <ImageView
        android:id="@+id/letter_right_image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle"
        android:layout_marginRight="20dp"
        android:layout_width="38dp"
        android:layout_height="38dp" />

    <TextView
        android:id="@+id/letter_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 분전"
        android:textSize="10sp"
        android:layout_alignBottom="@id/letter_right_name"
        android:layout_toLeftOf="@+id/letter_right_name"
        android:layout_marginRight="8dp"
        android:textColor="#d2d2d2"/>

    <TextView
        android:id="@+id/letter_right_content"
        android:layout_alignParentRight="true"
        android:layout_width="233dp"
        android:minHeight="50dp"
        android:text="민주야 시술 유형 버튼 안에 글씨 색 알려줄 수 있는 것 부탁해"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letter_right_name"
        android:layout_marginRight="67dp"
        android:layout_marginTop="13dp"
        android:lineSpacingMultiplier="1.3"/>

    <View
        android:layout_width="233dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/letter_right_content"
        android:layout_marginTop="11dp"
        android:background="#d9d9d9"
        android:layout_below="@+id/letter_right_content"/>

</RelativeLayout>
