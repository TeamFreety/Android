<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingTop="1dp"
    android:paddingBottom="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="81dp"
        android:layout_height="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="37dp"
        android:background="#95989A"/>

    <TextView
        android:id="@+id/letter_left_name"
        android:layout_width="51dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:text="정병진"
        android:paddingTop="3dp"
        android:textSize="11sp"
        android:textAlignment="center"
        android:paddingRight="5dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="65dp"
        android:background="@null"/>

    <ImageView
        android:src="@drawable/circle_background"
        android:layout_marginTop="7dp"
        android:layout_width="46dp"
        android:layout_marginLeft="16dp"
        android:layout_height="46dp" />
    
    <ImageView
        android:id="@+id/letter_left_image"
        android:layout_marginTop="11dp"
        android:scaleType="centerCrop"
        android:src="@drawable/triangle"
        android:layout_marginLeft="20dp"
        android:layout_width="38dp"
        android:layout_height="38dp" />

    <TextView
        android:id="@+id/letter_left_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 분전"
        android:textSize="10sp"
        android:layout_alignBottom="@id/letter_left_name"
        android:layout_toRightOf="@+id/letter_left_name"
        android:layout_marginLeft="8dp"
        android:textColor="#d2d2d2"/>
    
    <TextView
        android:id="@+id/letter_left_content"
        android:layout_width="wrap_content"
        android:minHeight="20dp"
        android:maxWidth="233dp"
        android:text="민주야 시술 유형 버튼 안에 글씨 색 알려줄 수 있는 것 부탁해"
        android:textSize="11sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letter_left_name"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="7dp"
        android:lineSpacingMultiplier="1.3"/>



</RelativeLayout>
