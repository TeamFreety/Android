<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/letter_left_name"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:text="정병진"
        android:textSize="13sp"
        android:gravity="right"
        android:paddingRight="5dp"
        android:layout_marginLeft="30dp"
        android:background="#95989A"/>

    <ImageView
        android:src="@drawable/circle_background"
        android:layout_width="46dp"
        android:layout_height="46dp" />
    
    <ImageView
        android:id="@+id/letter_left_image"
        android:scaleType="centerCrop"
        android:layout_width="39dp"
        android:layout_height="39dp" />

    <TextView
        android:id="@+id/letter_left_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 분전"
        android:layout_toRightOf="@+id/letter_left_name"
        android:layout_marginLeft="5dp"
        android:textColor="#ebebeb"/>
    
    <TextView
        android:id="@+id/letter_left_content"
        android:layout_width="200dp"
        android:text="민주야 시술 유형 버튼 안에 글씨 색 알려줄 수 있는 것 부탁해"
        android:textSize="10sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/letter_left_name"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="13dp"
        android:lineSpacingMultiplier="1.3"/>

</RelativeLayout>
