<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/my_page_review_body_title"
        android:text="매직셋팅"
        android:textSize="11sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/my_page_review_body_date"
        android:text="2017.04.02"
        android:textSize="6sp"
        android:textColor="#95989A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp" />

    <ImageView
        android:id="@+id/my_page_review_body_image"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/my_page_review_body_title"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/my_page_review_body_content"
        android:text="와 이거 정말 좋네요 앞으로도 이 서비스를 이용해서 머리를 잘라야 겠어요."
        android:textSize="10sp"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/my_page_review_body_image"
        android:layout_marginLeft="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/my_page_review_body_layout"
        android:layout_below="@+id/my_page_review_body_content"
        android:layout_alignLeft="@+id/my_page_review_body_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/my_page_review_body_score1"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_body_score2"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_body_score3"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />
        <ImageView
            android:id="@+id/my_page_review_body_score4"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <ImageView
            android:id="@+id/my_page_review_body_score5"
            android:src="@drawable/empty_star"
            android:layout_margin="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/my_page_review_body_num_score"
            android:textSize="9sp"
            android:text="5.0"
            android:layout_marginLeft="3dp"
            android:paddingTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="●"
            android:textColor="#95989A"
            android:textSize="7sp"/>

        <TextView
            android:id="@+id/my_page_review_body_writer"
            android:textSize="7sp"
            android:textColor="#000000"
            android:text="김다혜"
            android:layout_marginLeft="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>
