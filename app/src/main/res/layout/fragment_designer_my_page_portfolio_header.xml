<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:orientation="vertical">


        <TextView
            android:id="@+id/my_page_style_career_title"
            android:text="경력사항"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:id="@+id/my_page_style_career_edit_btn"
            android:layout_toRightOf="@+id/my_page_style_career_title"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@drawable/mypage_writing"/>


    <EditText
        android:id="@+id/edit_my_page_port_career"
        android:layout_below="@+id/my_page_style_career_title"
        android:layout_width="wrap_content"
        android:textSize="11sp"
        android:hint="경력 사항을 입력하세요."
        android:background="@null"
        android:textColor="#95989A"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drop_shadow" />

</RelativeLayout>
