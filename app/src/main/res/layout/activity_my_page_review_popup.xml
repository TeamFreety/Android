<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:onClick="onScreenClick"
    tools:context="com.sopt.freety.freety.view.my_page.MyPageReviewPopupActivity">

    <EditText
        android:id="@+id/review_popup_title_edit"
        android:layout_width="match_parent"
        android:hint="제목을 입력해주세요."
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:textColor="#9F9F9F"
        android:background="@null"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/review_popup_picture"
            android:src="@drawable/review_popup_picture"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/review_popup_picture"
            android:text="사진 첨부"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>

        <ImageButton
            android:id="@+id/review_popup_picture_btn"
            android:src="@drawable/review_popup_plus"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="67dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/review_popup_star_btn1"
            android:src="@drawable/review_popup_empty_star"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/review_popup_star_btn2"
            android:src="@drawable/review_popup_empty_star"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/review_popup_star_btn1"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/review_popup_star_btn3"
            android:src="@drawable/review_popup_empty_star"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/review_popup_star_btn2"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/review_popup_star_btn4"
            android:src="@drawable/review_popup_empty_star"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/review_popup_star_btn3"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageButton
            android:id="@+id/review_popup_star_btn5"
            android:src="@drawable/review_popup_empty_star"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/review_popup_star_btn4"
            android:layout_marginLeft="1dp"
            android:background="@null"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/review_popup_score"
            android:text="0.0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#9f9f9f"
            android:layout_toRightOf="@+id/review_popup_star_btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <EditText
            android:id="@+id/review_popup_content"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:layout_toLeftOf="@+id/review_popup_image"
            android:gravity="top"
            android:hint="내용을 입력해주세요."
            android:background="@null"
            android:textSize="15sp"
            android:textColor="#5d5d5d"
            android:layout_height="270dp" />

        <ImageView
            android:id="@+id/review_popup_image"
            android:background="#EFEFEF"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/review_popup_register"
        android:text="후기작성"
        android:layout_width="match_parent"
        android:background="#7eefd4"
        android:layout_height="50dp" />

</LinearLayout>
